<% if book.favorite_by(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), data: { book_id: book.id }, method: :delete, remote: true do %>
      ♡<%= book.favorites.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book), data: { book_id: book.id }, method: :post, remote: true do %>
      ♡<%= book.favorites.count %> いいね
    <% end %>
  </p>
<% end %>