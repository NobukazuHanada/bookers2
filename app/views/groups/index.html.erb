<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="">
        <h1>Groups 一覧</h1>
        <table class="table">
          <thead>
          <tr>
            <th>画像</th>
            <td>グループ名</td>
            <td>紹介分</td>
          </tr>
          </thead>
          <tbody>
          <% @groups.each do |group| %>
            <tr>
              <th><%= image_tag group.get_image, size: '50x50' %></th>
              <th><%= link_to group.name, group_path(group.id) %></th>
              <td><%= group.introduction %></td>
              <td>
                <% if group.owner.user_id == current_user.id %>
                  <%= button_to "Edit", edit_group_path(group), method: :get %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

