<div id="book_comments">
  <% book.book_comments.each do |comment| %>
    <div id="book_comment_id_<%= comment.id %>">
      <%= link_to(comment.user) do %>
        <%= image_tag comment.user.get_profile_image, size: "100x100" %>
        <%= comment.user.name %>
      <% end %>
      <p>
        <%= comment.body %>
      </p>
      <% if current_user.id == comment.user.id %>
        <p>
          <%= link_to "Destroy", book_book_comment_path(book.id, comment.id), method: :delete, remote: true %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>