<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render partial: 'form', locals: { book: @book, update: false } %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= form_with url: books_path, method: :get do |f| %>
        <%= f.label :category, "タグ検索" %>
        <%= f.text_field :category, class: "form-control" %>
        <%= f.submit "検索" %>
      <% end %>
      <%= link_to "新しい順に並び替え", books_path(order: "new") %>
      <%= link_to "評価順に並び替え", books_path(order: "rating") %>
      <h2>Books</h2>
      <%= render 'index', books: @books %>
    </div>
  </div>
</div>