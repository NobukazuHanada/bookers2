<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>
    </div>
  </div>

  <div>
    <table class="table">
      <thead>
      <tr>
        <th>
          今日の投稿数
        </th>
        <th>
          前日の投稿数
        </th>
        <th>
          投稿数比
        </th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @user.today_book_posts.count %>
        </td>
        <td>
          <%= @user.yesterday_book_posts.count %>
        </td>
        <td>
          <%= @user.ratio_today_yesterday_posts %>%
        </td>
      </tr>
      </tbody>
    </table>

    <table class="table">
      <thead>
      <tr>
        <th>
          今週の投稿数
        </th>
        <th>
          先週の投稿数
        </th>
        <th>
          投稿数比
        </th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @user.this_week_book_posts.count %>
        </td>
        <td>
          <%= @user.last_week_book_posts.count %>
        </td>
        <td>
          <%= @user.ratio_this_last_week_posts %>%
        </td>
      </tr>
      </tbody>
    </table>

  </div>

  <div>
    <table class="table">
      <thead>
      <tr>
        <% (0..6).each do |i| %>
          <th>
            <% if i == 0 %>
              本日
            <% elsif i == 1 %>
              前日
            <% else %>
              <%= i %>日前
            <% end %>
          </th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <tr>
        <% @user.per_day_posts_in_this_week.each do |posts| %>
          <td>
            <%= posts.length %>
          </td>
        <% end %>
      </tr>
      </tbody>
    </table>
  </div>

  <div>
    <canvas id="post-chart"></canvas>
    <script>
        setDataToPostChart(<%= (@user.per_day_posts_in_this_week.map {|post| post.length }).to_s %>);
    </script>
  </div>

  <div>
    <%= form_with url: user_search_books_path(@user), local: false do |f| %>
      <%= f.date_field :date %>
      <%= f.submit "検索" %>
    <% end %>
    <div id="search-books-result"></div>
  </div>

</div>
