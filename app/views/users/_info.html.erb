<table class='table'>
  <tr><%= image_tag user.get_profile_image, size: '100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>followed</th>
    <th>
      <%= link_to user_followed_path(user) do %>
        <%= user.followed_users.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>follower</th>
    <th>
      <%= link_to user_follower_path(user) do %>
        <%= user.follower_users.count %>
      <% end %>
    </th>
  </tr>
</table>

<% unless user == current_user %>
  <div class="row">
    <% if current_user.is_follow(user) %>
      <%= button_to "フォローを外す", user_relationships_path(user), method: :delete %>
    <% else %>
      <%= button_to "フォローする", user_relationships_path(user), method: :post %>
    <% end %>
  </div>

  <% if user.is_mutual_follow(current_user) %>
    <%= button_to "DMを開く", user_dms_path(user), method: :get %>
  <% end %>
<% end %>
　
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>